<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgHomeQuickplayer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_quickplayer_blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameSongMiniBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/home_minibar_test_name_song"
            android:textColor="@color/colorMineShaft"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNameSingerMiniBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/home_minibar_test_name_author"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressBarMiniBar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:progress="25" />

        <TextView
            android:id="@+id/tvRunningTimeMiniBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/minibar_time_default"
            android:textSize="12sp" />
        <!--Use the following code to get the spinner in various expected color.Here we use
         the hexcode to display spinner in blue color.-->
    </LinearLayout>

    <Button
        android:id="@+id/btnPlayingListMiniBar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_favourite_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPreviousPlayMiniBar"
            style="@style/ButtonStateSong"
            android:background="@drawable/ic_btn_previous_song" />

        <Button
            android:id="@+id/btnPlayMiniBar"
            style="@style/ButtonStateSong"
            android:background="@drawable/ic_btn_play_song" />

        <Button
            android:id="@+id/btnNextMiniBar"
            style="@style/ButtonStateSong"
            android:background="@drawable/ic_btn_next_song" />

    </LinearLayout>
    <Button
        android:id="@+id/btnExitMinibar"
        style="@style/ButtonStateSong"
        android:background="@drawable/ic_exit_remote_view" />
</LinearLayout>
